<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Sets Collection</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/main.css" />
    
  </head>
  <body>
    <%- include('partials/navbar', { page: '/sets' }) %>
    <div class="hero bg-base-200 text-white py-6 px-4 text-left mb-8">
      <h1 class="text-purple-4xl font-bold mb-30">Filters</h1>
      <div class="filters flex justify-center space-x-4">
        <a href="/lego/sets?theme=technic" class="btn btn-primary rounded">Technic</a>
        <a href="/lego/sets?theme=boost" class="btn btn-primary rounded">Boost</a>
        <a href="/lego/sets?theme=mindstorms" class="btn btn-primary rounded">Mindstorms</a>
      </div>
    </div>
    <div class="content px-4">
      <div class="overflow-x-auto">
        <table class="lego-table table-auto w-full bg-white shadow-md rounded-lg overflow-hidden">
          <thead class="bg-gray-200">
            <tr>
              <th class="py-3 px-6 text-left text-gray-600 font-semibold">Image</th>
              <th class="py-3 px-6 text-left text-gray-600 font-semibold">Name</th>
              <th class="py-3 px-6 text-left text-gray-600 font-semibold">Theme</th>
              <th class="py-3 px-6 text-left text-gray-600 font-semibold">Year</th>
              <th class="py-3 px-6 text-left text-gray-600 font-semibold">Parts</th>
              <th class="py-3 px-6 text-left text-gray-600 font-semibold">Details</th>
            </tr>
          </thead>
          <tbody class="text-purple-700">
            <% sets.forEach(function(set) { %>
              <tr class="border-b">
                <td class="py-3 px-6"><img src="<%= set.img_url %>" alt="<%= set.name %>" class="w-20 h-auto object-contain"></td>
                <td class="py-3 px-6"><%= set.name %></td>
                <td class="py-3 px-6"><a href="/lego/sets?theme=<%= set.theme_id %>" class="text-base-600 hover:underline"><%= set.theme_id %></a></td>
                <td class="py-3 px-6"><%= set.year %></td>
                <td class="py-3 px-6"><%= set.num_parts %></td>
                <td class="py-3 px-6"><a href="/lego/set/<%= set.set_num %>" class="btn btn-primary rounded">Details</a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>