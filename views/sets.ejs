<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Explore our complete Lego set collection, with themes like Technic, Classic Town, and Star Wars.">
        <title>Lego Sets Collection</title>
        <link href="/css/main.css" rel="stylesheet">
    </head>
<body>
<%- include('partials/navbar', { page: '/lego/sets' }) %> 


<div class="container mx-auto mt-10">
    <div class="hero bg-base-100 p-6 text-center">
        <div class="max-w-md mx-auto space-y-2">
        <h1 class="text-4xl font-bold">Collection</h1>
        <p class="text-lg">Explore the complete Lego set collection below</p>
    </div>
    </div>

    <div class="flex justify-center mt-4 space-x-4">
        <a href="/lego/sets?theme=Technic" class="btn btn-sm btn-outline">Technic</a>
        <a href="/lego/sets?theme=Classic Town" class="btn btn-sm btn-outline">Classic Town</a>
        <a href="/lego/sets?theme=Books" class="btn btn-sm btn-outline">Books</a>
    </div>

    <div class="overflow-x-auto mt-6">
        <table class="table w-full text-left">
            <thead>
                <tr>
                    <th class="bg-base-200">Image</th>
                    <th class="bg-base-200">Name</th>
                    <th class="bg-base-200">Theme</th>
                    <th class="bg-base-200">Year</th>
                    <th class="bg-base-200">Parts</th>
                    <th class="bg-base-200">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% sets.forEach(function(set) { %>
                    <tr class="border-b">
                      <td class="py-3 px-6"><img src="<%= set.img_url %>" alt="<%= set.name %>" class="w-20 h-auto object-contain"></td>
                      <td class="py-3 px-6"><%= set.name %></td>
                      <td class="py-3 px-6"><a href="/lego/sets?theme=<%= set.Theme.name %>" class="text-base-600 hover:underline"><%= set.Theme.name %></a></td>
                      <td class="py-3 px-6"><%= set.year %></td>
                      <td class="py-3 px-6"><%= set.num_parts %></td>
                      <td class="py-3 px-6"><a href="/lego/set/<%= set.set_num %>" class="btn btn-primary rounded">Details</a></td>
      
                    </tr>
                  <% }) %>
                  
            </tbody>
        </table>
    </div>
</div>
</body>
</html>
